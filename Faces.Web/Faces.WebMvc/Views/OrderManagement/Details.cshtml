@model FacesMvc.ViewModels.OrderViewModel
 
@{
    ViewData["Title"] = "Order Details";
}

<h3 id="PageTitle">Order Details</h3>

Order Id: @Model.OrderId
User Email: @Model.UserEmail
Picture:
   <img src="@Model.ImageString" style="width:50px; height:50px" />
Order Status: @Model.Status

<table class="table">
    <thead>
        <tr>
            <th> OrderDetailId</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var detail in Model.OrderDetails)
        {
            <tr>
                <td>@detail.OrderDetailId</td>
                <td><img src="@detail.ImageString" style="width:30px; height:30px"  /></td>
            </tr>
        }
    </tbody>
</table>